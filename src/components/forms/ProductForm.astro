---
// No necesitas importar nada aquí para el formulario.
---

<div
  class="flex items-center justify-center min-h-screen bg-gray-100 p-4 sm:p-6"
>
  <div
    class="w-full max-w-xl bg-white p-6 rounded-xl shadow-lg border border-gray-200"
  >
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">
      Crear Nuevo Producto
    </h1>
    <form id="createProductForm" class="space-y-6">
      <!-- Campo Nombre -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-1"
          >Nombre del producto</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        />
      </div>

      <!-- Campo Descripción -->
      <div>
        <label
          for="description"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Descripción</label
        >
        <textarea
          id="description"
          name="description"
          required
          rows="4"
          class="block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        ></textarea>
      </div>

      <!-- Campo Precio -->
      <div>
        <label for="price" class="block text-sm font-medium text-gray-700 mb-1"
          >Precio</label
        >
        <input
          type="number"
          id="price"
          name="price"
          min="0"
          required
          class="block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        />
      </div>

      <!-- Campo Categoría -->
      <div>
        <label
          for="category"
          class="block text-sm font-medium text-gray-700 mb-1">Categoría</label
        >
        <input
          type="text"
          id="category"
          name="category"
          class="block w-full px-4 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
        />
      </div>

      <!-- Campo Por Talla -->
      <div class="flex items-center gap-2">
        <input
          type="checkbox"
          id="by_size"
          name="by_size"
          class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 transition-colors"
        />
        <label for="by_size" class="text-sm font-medium text-gray-700"
          >Disponible por talla</label
        >
      </div>

      <!-- Botón de Enviar -->
      <button
        type="submit"
        class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
      >
        Crear Producto
      </button>
    </form>
  </div>
</div>

<script>
  import { actions } from "astro:actions";
  import { navigate } from "astro:transitions/client";

  const form: HTMLFormElement | null = document.querySelector(
    "form#createProductForm",
  );

  form?.addEventListener("submit", async (event) => {
    event.preventDefault();

    const formData = new FormData(form);

    const { data, error } = await actions.product.createProduct(formData);

    console.log("data: ", data);
    console.log("error: ", error);

    if (!error) {
      navigate("/");
    }
  });
</script>
