---
import "@/styles/global.css";
import { Search } from "lucide-react";
import NavLinksWrapper from "@/components/navigation/NavLinksWrapper";
import CategoriesNavWrapper from "../categories/CategoriesNavWrapper.astro";
---

<header class="w-full border-b bg-primary">
  <div class="w-full flex flex-col gap-2">
    <div class="flex items-center justify-between gap-2 px-4 py-2">
      <a href="/">
        <picture>
          <source srcset="/img/logo 2.png" type="image/png" />
          <img src="/img/logo 2.png" alt="Celestia Logo" class="w-20" />
        </picture>
      </a>
      <form action="" class="h-10 max-w-[550px] w-full">
        <div class="relative h-full w-full">
          <input
            type="text"
            id="search"
            placeholder="Buscar Producto..."
            class="outline-none focus:outline-none h-full p-2 pr-12 text-black w-full text-sm font-semibold border rounded-sm bg-white"
          />
          <button
            type="submit"
            class="absolute top-0 right-0 text-black h-10 w-10 flex items-center justify-center hover:bg-primary/10 transition-colors border-none"
          >
            <Search size={20} />
          </button>
        </div>
      </form>
      <div class="flex gap-2">
        <NavLinksWrapper client:load />
        <button id="logout">Cerrar sesion</button>
      </div>
    </div>
    <CategoriesNavWrapper />
  </div>
</header>

<script>
  import { actions } from "astro:actions";
  import { navigate } from "astro:transitions/client";
  const logoutButton = document.getElementById("logout");

  if (logoutButton) {
    logoutButton.addEventListener("click", async (e) => {
      e.preventDefault();

      await actions.auth.logout();
      navigate("/");
    });
  }
</script>
